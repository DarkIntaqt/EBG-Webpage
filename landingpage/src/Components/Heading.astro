---
const { level = 2 } = Astro.props;
---

{
  level === 2 ? (
    <h2>
      <slot />
    </h2>
  ) : (
    <h3>
      <slot />
    </h3>
  )
}

<style lang="scss">
  h2,
  h3 {
    font-family: "Inter Variable", sans-serif;
    color: black;

    text-align: center;
  }

  h2 {
    font-size: 2rem;
    margin: 1rem 0;
  }

  h3 {
    font-size: 1.5rem;
    margin: 0.8rem 0;
  }
</style>
